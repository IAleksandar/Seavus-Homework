@model PizzaViewModel

<h3>Create pizza:</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PizzaSizeEnum" class="control-label"></label>
                <select class="form-control" asp-for="PizzaSizeEnum" asp-items="Html.GetEnumSelectList<PizzaSizeEnum>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsOnPromotion" class="control-label"></label>
                <input type="checkbox" asp-for="IsOnPromotion" class="form-control" />
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>
